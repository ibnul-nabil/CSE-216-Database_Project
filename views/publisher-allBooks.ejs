        <div class="row my-3">
            <div class="d-flex justify-content-between">
                <h3> My Books </h3>
            </div>
            
        </div>
        <div class="row">

            <% if(books.length){ for(var i = 0; i< books.length; i++) {%>
                <div class=" card col-3 mb-3">
                    <div class="d-flex justify-content-center pt-3">
                        <img src="<%= books[i].IMAGE%>" style = "height: 160px; width: 100px;">
                    </div>
    
                    <div class = "class-body my-3">
                        <h4 class="card-title d-flex justify-content-center"> <%=books[i].BOOK_NAME%></h4>
                        <p class = "card-text d-flex justify-content-center"> <%=books[i].AUTHOR_NAME%>
                            <br>TK: <%=books[i].PRICE%> <br> Stock: <%=books[i].STOCK%>  </p>
                        <div class = " d-flex justify-content-center align-items-center">
                            <div class="my-1">     
                                <h5 class = "text-center"> Update Book </h5>
                                <form id="updateForm" method="post">
                                    <div class = "my-0">
                                        <input type="hidden" id="id" name="id" value="<%=books[i].BOOK_ID%>" />
                                    
                                    </div> 
                                    <div class = "my-1">
                                        <input type="number" id="price" name="price" placeholder="Price" />
                                    
                                    </div> 
                                    <div class = "my-1">
                                        <input type = "number" id="stock" name="stock" placeholder="Stock" />
                                    
                                    </div>
    
                                    <div class = " d-flex justify-content-center align-items-center">
                                        <button class = "btn btn-primary " type = "submit"> Update </button>
                                        
                                    </div>
                                </form>
                                
                            </div>
    
                        </div>
                    </div>
                </div>
               
            &nbsp;
            <% } }else{ %>
                <tr>
                  <td>No data ever existed.</td>
                </tr>
            <% } %>
           
